{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "wordpress",
    "parser": "babel-eslint",
    "rules": {
        "indent": ["error", "tab"],
        "space-in-parens": ["error", "never"]
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2016,
        "sourceType": "module"
    },
    "globals": {
        "wp": true,
        "jQuery": true
    }
}